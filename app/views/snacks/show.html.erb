<h1><%= @snack.name %></h1>
<h2>Price: $<%= @snack.price %></h2>
<section class="location-info">
  <h2>Locations</h2>
  <% @snack.machines.each do |machine| %>
    <p><%= machine.location %> (<%= machine.snack_count %> kinds of snacks, average price of $<%= machine.price_avg %>)</p>
  <% end %>
</section>
